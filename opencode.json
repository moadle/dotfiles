{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.2",
  "plugin": ["oh-my-opencode@latest"],
  "mcp": {
    "postgres": {
      "type": "local",
      "command": ["toolbox", "--prebuilt", "postgres", "--stdio"],
      "enabled": true,
      "environment": {
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5433",
        "POSTGRES_DATABASE": "",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "12345678"
      }
    },
    "redis-mcp-server": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "redis-mcp-server@latest",
        "redis-mcp-server",
        "--url",
        "redis://localhost:6380/0"
      ]
    },
    "bun": {
      "type": "remote",
      "url": "https://bun.com/docs/mcp"
    },
    "tanstack": {
      "type": "remote",
      "url": "https://tanstack.com/api/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer token"
      }
    },
    "shadcn": {
      "type": "local",
      "command": ["bunx", "shadcn@latest", "mcp"],
      "enabled": true
    }
  }
}
