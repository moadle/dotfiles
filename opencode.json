{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.3-codex",
  "plugin": ["oh-my-opencode@latest"],
  "mcp": {
    "postgres": {
      "type": "local",
      "command": ["toolbox", "--prebuilt", "postgres", "--stdio"],
      "enabled": true,
      "environment": {
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5433",
        "POSTGRES_DATABASE": "",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "12345678"
      }
    },
    "redis-mcp-server": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "redis-mcp-server@latest",
        "redis-mcp-server",
        "--url",
        "redis://default:12345678@localhost:6379"
      ]
    },
    "bun": {
      "type": "remote",
      "url": "https://bun.com/docs/mcp"
    },
    "tanstack": {
      "type": "remote",
      "url": "https://tanstack.com/api/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer token"
      }
    },
    "shadcn": {
      "type": "local",
      "command": ["bunx", "shadcn@latest", "mcp"],
      "enabled": true
    },
    "websearch": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa&exaApiKey=${encodeURIComponent(ApiKey)}",
      "enabled": true,
      "oauth": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ApiKey"
      },
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true,
      "oauth": false
    }
  }
}
