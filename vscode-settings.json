{
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.iconTheme": "vscode-icons",
  "workbench.activityBar.location": "top",
  "git.autofetch": true,
  "editor.fontFamily": "'FiraCode Nerd Font Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": false,
  "editor.wordWrap": "on",
  "[typescript][typescriptreact][javascript][javascriptreact][json][jsonc][html][css][scss][less][yaml][svg][prisma]": {
    "editor.formatOnSave": true
  },
  "[typescript][typescriptreact][javascript][javascriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescript][typescriptreact][javascript][javascriptreact][json][jsonc][html][css][scss][less][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "vsicons.dontShowNewVersionMessage": true,
  "thunder-client.requestLayout": "Top/Bottom",
  "gitlens.mode.active": "zen",
  "liveServer.settings.donotShowInfoMsg": true
}
